<div class = 'update user'>
	<%= form_for(:user,:url=>{:action => 'update',:id => @user.id}) do |f|%>
	<table summary="user form-fields">
		<tr>
			<%= f.label(:first_name) %>
			<%= f.text_field (:first_name) %>
		</tr>
		<br/>
		<tr>
			<%= f.label(:last_name) %>
			<%= f.text_field (:last_name) %>	
		</tr>
		<br/>
		<tr>
			<%= f.label(:email,"Email-ID :")%>
			<%= f.text_field(:email)%>
		</tr>
		<br/>
		<tr>
			<%= f.label (:username)%>
			<%= f.text_field (:username)%>
		</tr>
		<br/>
		<tr>
			<%= f.label (:password)%>
			<%= f.password_field (:password)%>
		</tr>
		<br/>
		<tr>
			<%= f.label :user_profile_picture, "Upload a profile picture." %>
			<%= f.file_field :user_profile_picture %>
		</tr>
		<br/>
		</table>
		<%= submit_tag("Update") %>
		<% end %>
</div>
